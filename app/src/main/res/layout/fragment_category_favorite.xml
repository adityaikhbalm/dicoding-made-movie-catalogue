<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.google.android.material.tabs.TabLayout
        android:id="@+id/tab_favorites"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/high_dark"
        app:tabBackground="?attr/selectableItemBackground"
        app:tabIndicatorColor="@color/high_white"
        app:tabGravity="fill"
        app:tabMode="fixed"
        app:tabTextColor="@color/medium_white"
        app:tabSelectedTextColor="@color/high_white"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <com.dicoding.made.ui.custom.ViewPagerSwipe
        android:id="@+id/category_favorite_viewpager"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:overScrollMode="never"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tab_favorites"/>
</androidx.constraintlayout.widget.ConstraintLayout>